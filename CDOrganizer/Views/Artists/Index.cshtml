<h1>Artists</h1>

@if (@Model.Count == 0)
{
  <h3>No artists have been added yet!</h3>
}

@foreach (var artist in Model)
{
  <h3><a href='/artists/@artist.GetId()'>@artist.GetName()</a></h3>
}
<form action="/artists/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
<p><a href='/'>Back home</a></p>
